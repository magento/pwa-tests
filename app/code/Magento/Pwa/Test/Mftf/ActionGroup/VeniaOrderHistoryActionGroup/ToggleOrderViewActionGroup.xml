<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="ToggleOrderView">
        <waitForPwaElementVisible selector="{{VeniaOrderHistorySection.orderViewToggle}}" stepKey="waitForOrderDetailsExpandButtonElementToLoad"/>
        <click selector="{{VeniaOrderHistorySection.orderViewToggle}}" stepKey="assertOrderDetailsExpandButtonElement"/>
        <waitForPwaElementNotVisible selector="{{VeniaOrderHistorySection.orderContentCollapsed}}" stepKey="waitForOrderCollapseElementToDisappear"/>
    </actionGroup>
</actionGroups>
