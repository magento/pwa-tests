<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="RemoveGiftCard">
        <arguments>
            <argument name="discount" defaultValue="CartPromotion"/>
        </arguments>
        <waitForPwaElementVisible selector="{{CartPageGiftCardSection.removeGiftCard}}" stepKey="waitForGiftCardRemoveLink"/>
        <click selector="{{CartPageGiftCardSection.removeGiftCard}}" stepKey="removeGiftCard"/>
        <waitForPwaElementVisible selector="{{CartPageGiftCardSection.giftCardCode}}" stepKey="waitForGiftCardField"/>
        <waitForPwaElementVisible selector="{{CartPageGiftCardSection.applyGiftCard}}" stepKey="waitForGiftCardApplyButton"/>
        <waitForPwaElementVisible selector="{{CartPageGiftCardSection.giftCardCheckBalance}}" stepKey="waitForGiftCardCheckBalanceLink"/>
        <waitForPwaElementNotVisible selector="{{CartPageGiftCardSection.removeGiftCard}}" stepKey="verifyGiftCardRemoveLinkIsNoMoreDisplayed"/>
        <seeElement selector="{{CartPageGiftCardSection.giftCardCode}}" stepKey="seeGiftCardTextField"/>
        <seeElement selector="{{CartPageGiftCardSection.applyGiftCard}}" stepKey="seeApplyGiftCardButton"/>
        <seeElement selector="{{CartPageGiftCardSection.giftCardCheckBalance}}" stepKey="assertCheckGiftCardBalanceLink"/>
        <dontSee userInput="{{discount.GiftCard}}" stepKey="doNotSeeAppliedGiftCard"/>
        <dontSee userInput="Gift Card(s) applied" stepKey="doNotSeeAppliedGiftCardLabel"/>
    </actionGroup>
</actionGroups>
