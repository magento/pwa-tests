        <amOnPage url="{{Cart.url}}" stepKey="goToCartPage"/>
        <waitForText stepKey="seeCartHeading" selector="{{VeniaCartPageSection.cartHeader}}" userInput="Cart"/>
    </actionGroup>
</actionGroups>
