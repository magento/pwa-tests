<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="CustomerSignIn">
        <annotations>
            <features value="PWA"/>
            <stories value="Customer Account"/>
            <title value="User should be able to Sign In to the account on Venia storefront."/>
            <description value="User should be able to Sign In to the account on Venia storefront."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-18074"/>
            <group value="PWA"/>
        </annotations>

        <before>
            <createData entity="Simple_US_Customer" stepKey="createCustomer"/>
            <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>
        </before>

        <after>
            <actionGroup ref="SignOut" stepKey="signOutFromTheAccount"/>
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
        </after>

        <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm" />

        <actionGroup ref="SignIn" stepKey="enterEmailForAccount">
            <argument name="email" value="$$createCustomer.email$$"/>
            <argument name="pwd" value="$$createCustomer.password$$"/>
        </actionGroup>

        <actionGroup ref="AssertSuccessfulSignIn" stepKey="assertUserSignIn">
            <argument name="Customer" value="Simple_US_Customer"/>
        </actionGroup>

    </test>
</tests>
