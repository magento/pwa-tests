<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="ForgotPassword">
        <annotations>
            <features value="PWA"/>
            <stories value="Customer Account"/>
            <title value="User should be able to reset the password via Forgot password flow."/>
            <description value="User should be able to reset the password via Forgot password flow."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-32248"/>
            <group value="PWA"/>
        </annotations>

        <before>

            <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>

        </before>

        <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm"/>

        <actionGroup ref="UpdatePassword" stepKey="enterEmailForAccount"/>

    </test>
</tests>
