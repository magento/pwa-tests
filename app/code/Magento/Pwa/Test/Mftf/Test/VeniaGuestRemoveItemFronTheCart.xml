<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="RemoveItemFromTheCart" extends="CreateConfigurableProduct">
        <annotations>
            <features value="PWA"/>
            <stories value="Kebab Features"/>
            <title value="Verify user should be able to Remove an item from the cart"/>
            <description value="Verify user should be able to Remove an item from the cart"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-21749"/>
            <group value="PWA"/>
        </annotations>

        <before>

            <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>

            <actionGroup ref="GoToProductDetailsPageViaCategory" stepKey="goToProductDetailsPageOfConfigurableProduct">
                <argument name="categoryName" value="$$createCategory.name$$"/>
                <argument name="productName" value="$$createConfigProduct.name$$"/>
            </actionGroup>

            <actionGroup ref="SetProductConfigOptions" stepKey="selectProductOptionAndQty"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad"/>

            <actionGroup ref="AddToCart" stepKey="addToCart1"/>

            <actionGroup ref="TemporaryWait5" stepKey="waitForElementToLoad5"/>

        </before>

        <actionGroup ref="RemoveItemFromTheCart" stepKey="removeItemFromTheCart"/>

    </test>
</tests>
