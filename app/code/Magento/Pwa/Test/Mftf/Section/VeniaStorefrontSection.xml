<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="VeniaStorefrontSection">
        <element name="title" type="text" selector="[class*='categoryList-title-'] span"/>
        <element name="productImage" type="button" selector="[class*='categoryTile-image'][alt*='{{var1}}']" parameterized="true"/>
        <element name="categoryName" type="text" selector="//span[contains(text(), '{{categoryName}}')]" parameterized="true"/>
    </section>

    <section name="VeniaSearchResultSection">
        <element name="resultSection" type="textarea" selector="div[class^='main-page-']"/>
        <element name="productImage" type="button" selector="img[alt='{{product_name}}']" parameterized="true"/>
        <element name="productName" type="text" selector="//span[contains(text(), '{{productName}}')]" parameterized="true"/>
    </section>

    <section name="VeniaSearchSuggestionResultsSection">
        <element name="suggestionBox" type="textarea" selector="div[class^='autocomplete-root_visible']"/>
        <element name="suggestedCategories" type="textarea" selector="ul[class^='suggestedCategories-root-']"/>
        <element name="suggestedProducts" type="button" selector="a[class^='suggestedProduct-root-']"/>
        <element name="suggestedProduct" type="button" selector="a[class^='suggestedProduct-root-'][href*='{{productName}}']" parameterized="true"/>
        <element name="noResults" type="text" selector="//div[contains(text(), 'No results found, try a different search')]"/>
        <element name="searchInProgress" type="text" selector="//div[contains(text(), 'Fetching results...')]" />
    </section>

</sections>
