<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="VeniaMainMenuSignInSection">
        <element name="mainArea" type="textarea" selector="[class*='navigation-signIn_open-']"/>
        <element name="email" type="input" selector="[class*='authModal-root-'] input[name='email']"/>
        <element name="password" type="input" selector="[class*='authModal-root-'] input[name='password']"/>
        <element name="signIn" type="button" selector="//div[contains(@class, 'authModal-root-')]//span[contains(text(), 'Sign In')]"/>
        <!--<element name="forgotUsernamePassword" type="button" selector="//div[contains(@class, 'authModal-root-')]//span[contains(text(), 'Forgot Password?')]"/>-->
        <!--<element name="createAnAccount" type="button" selector="//div[contains(@class, 'authModal-root-')]//span[contains(text(), 'Create an Account')]"/>-->
        <element name="navigationModal" type="input" selector="[class*='navigation-modal_open']"/>
        <element name="forgotUsernamePassword" type="button" selector="button[class^='signIn-forgotPasswordButton']"/>
        <element name="createAnAccount" type="button" selector="div[class^='signIn-buttonsContainer'] button[class^='button-root_normalPriority']"/>
    </section>
</sections>
